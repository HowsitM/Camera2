<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_analyse_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fyp.com.camera2.AnalyseSelectionActivity">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:id="@+id/ProfessionalPlayerSpinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProfessionalPlayerSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:id="@+id/AmateurPlayerSpinner" />

    <Button
        android:text="Analyse"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:id="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif-medium"
        android:textSize="30sp"
        android:textColor="@color/colorWhite"
        android:background="@android:color/holo_red_dark" />

    <VideoView
        android:layout_height="200dp"
        android:id="@+id/videoView"
        android:layout_width="180dp"
        android:layout_marginEnd="11dp"
        android:layout_alignTop="@+id/videoView2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Professional Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/txtProfessionalPlayer"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/videoView2" />

    <TextView
        android:text="Amateur Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:id="@+id/txtAmateurPlayer"
        android:layout_alignBottom="@+id/AmateurPlayerSpinner"
        android:layout_alignStart="@+id/txtProfessionalPlayer" />

    <VideoView
        android:layout_height="200dp"
        android:id="@+id/videoView2"
        android:layout_width="180dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true" />
</RelativeLayout>
